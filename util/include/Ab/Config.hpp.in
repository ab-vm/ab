#ifndef AB_CONFIG_HPP_
#define AB_CONFIG_HPP_

#define AB_VERSION_MAJOR @AB_VERSION_MAJOR@
#define AB_VERSION_MINOR @AB_VERSION_MINOR@
#define AB_VERSION_PATCH @AB_VERSION_PATCH@
#define AB_VERSION "@AB_VERSION@"
#define AB_COMMIT "@AB_COMMIT@"

/// Enable debug code.
#cmakedefine AB_DEBUG

/// Enable very slow debug code.
#cmakedefine AB_DEBUG_SLOW

/// Abort the process in the event of an error
/// Essentially enabling "disgraceful" error handling.
#cmakedefine AB_FAIL_FAST

/// Never define this. Used to guard permanently-disabled code.
#undef AB_DISABLE

#endif  // AB_CONFIG_HPP_
